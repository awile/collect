{
  "name": "collect",
  "version": "1.0.0",
  "main": "dist/electron.js",
  "repository": "https://github.com/awile/collect.git",
  "author": "Adam Wiles <adam.wiles@newscred.com>",
  "license": "MIT",
  "build": {
    "appId": "com.test.collect",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "externals": [
    "sqlite3",
    "knex"
  ],
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "rsync -a src/electron.js dist/ && concurrently 'yarn run start-react' 'wait-on http://localhost:3000 && electron .'",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "start-react": "parcel -p 3000 ./src/index.html",
    "release": "build"
  },
  "dependencies": {
    "moment": "^2.27.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "sqlite3": "^5.0.0",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "electron-rebuild": "^1.11.0",
    "knex": "^0.21.1",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-externals": "^0.5.0",
    "prop-types": "^15.7.2",
    "sass": "^1.26.9",
    "wait-on": "^5.0.1"
  }
}
