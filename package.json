{
  "name": "collect",
  "version": "1.0.0",
  "main": "dist/electron.js",
  "repository": "https://github.com/awile/collect.git",
  "author": "Adam Wiles <adam.wiles@newscred.com>",
  "license": "MIT",
  "build": {
    "appId": "com.test.Collect",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "output": "./build"
    },
    "mac": {
      "target": "dmg",
      "icon": "./build/icon.icns"
    }
  },
  "externals": [
    "sqlite3",
    "knex"
  ],
  "scripts": {
    "clean": "rm -rf dist/",
    "postinstall": "install-app-deps",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "build": "yarn run compile-server && parcel build src/index.html --out-dir dist/ && cp ./collect.icns ./build/icon.icns",
    "release": "electron-builder",
    "start-dev": "yarn run clean && yarn run compile-server && concurrently 'yarn run start-renderer' 'wait-on http://localhost:3000 && NODE_ENV=development electron .'",
    "start-app": "NODE_ENV=development electron .",
    "compile-server": "tsc --p ./tsconfig.json",
    "start-renderer": "parcel -p 3000 ./src/index.html"
  },
  "dependencies": {
    "@ant-design/icons": "^4.2.1",
    "antd": "^4.4.2",
    "knex": "^0.21.1",
    "moment": "^2.27.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-virtualized": "^9.21.2",
    "sqlite3": "^5.0.0",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0",
    "electron-rebuild": "^1.11.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-externals": "^0.5.0",
    "prop-types": "^15.7.2",
    "react-select": "^3.1.0",
    "sass": "^1.26.9",
    "typescript": "^3.9.6",
    "wait-on": "^5.0.1"
  }
}
