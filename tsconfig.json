{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "target": "ES2019",
        "lib": ["ES2019"],
        "module": "commonjs",
        "moduleResolution": "node",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "noEmitOnError": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "baseUrl": ".",
    },
    "exclude": [
        "src/renderer", 
        "src/_index.scss", 
        "src/index.html", 
        "src/index.js"
    ],
    "include": [
        "src/main/**/*",
        "src/electron.js"
    ]
}

